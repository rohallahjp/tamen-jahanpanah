  "scripts": {
    "dev": "vite",
    "dev:backend": "node Backend/server.js",
    "start": "node Backend/server.js",
    "build": "vite build && cpx Backend/** dist/Backend && cpx package.json dist && copyfiles .env dist && (cd dist && npm install --production)",
